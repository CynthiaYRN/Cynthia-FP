


#include <iostream>
using namespace std;

int main()
{
	int i = 0;
	while (i <= 9)
	{
		cout << i << ", ";
		i++;
	}

	int b = 0, suma = 0;
	while (b <= 9)
	{
		cout << b << ", ";
		suma = suma + b;
		b++;
		cout << endl;
		cout << "total " << suma << endl;
	}


	int opcion1 = 0;
	do
	{
		cout << "Menu opciones " << endl;
		cout << "1 - Ejecuto opcion 1 " << endl;
		cout << "2 - Ejecuto opcion 2 " << endl;
		cout << "3 - Ejecuto opcion 3 " << endl;
		cout << "4 - Ejecuto opcion 4 " << endl;
		cout << "5 - Ejecuto opcion 5 " << endl;
		cout << "6 - Salir " << endl;
		cin >> opcion1;
	} while (opcion1 != 6);

	// Calcular el factorial de un número usando la instrucción while, usando una variable adicional para acumular el resultado de las multiplicaciones





