    // Diseñar un programa que lea tres números A, B, C y visualice en pantalla el valor del más grande.

    double A, B, C;
    cout << "Ingrese A: ";
    cin >> A;
    cout << "Ingrese B: ";
    cin >> B;
    cout << "Ingrese C: ";
    cin >> C;
    if (A > B && A > C)
    {
        cout << "El valor más grande es A: " << A << endl;
    }
    else if (B > A && B > C)
    {
        cout << "El valor más grande es B: " << B << endl;
    }
    else {
        cout << "El valor más grande es C: " << C << endl;
    }


