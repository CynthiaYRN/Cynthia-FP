    cout << "Ingrese la distancia (km): ";
    cin >> distancia;
    cout << "Ingrese días de estancia: ";
    cin >> dias;
    if (dias > 7 && distancia > 800)
        precio = distancia * 2.5 * 2 * .7;
            
