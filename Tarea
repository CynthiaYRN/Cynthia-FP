#include <iostream>
#include <string>

using namespace std;

int main()
{
	// Resultado 1
	cout << "(3 + 5 * 2 / 2 - 1): " << (3 + 5 * 2 / 2 - 1) << endl;

	// Resultado 2
	cout << "(3 + 10 / 2 - 1): " << (3 + 10 / 2 - 1) << endl;

	// Resultado 3
	cout << "(3 + 5 - 1): " << (3 + 5 - 1) << endl;

	// Resultado 4
	cout << "(8 - 1): " << (8 - 1) << endl;

	// Resultado 5
	cout << "(1 / 3 * 3): " << (1 / 3 * 3) << endl;

	int num;
	cout << "Ingrese un numero";
	cin >> num;
	int potencia = 4 * 4;
	cout << "La potencia de " << num << "es" << 16 << endl;

	float yardas;
	cout << "Ingrese las yardas: ";
	cin >> yardas;
	float metros = 10 * 0.9144;
	cout << "Número en metros: " << metros << endl;

	float valorOriginal = 200000;
	float porcentajeDepreciacion = 0.8;
	int Depreciacion = 5;
	float depreciacionTotal = valorOriginal * porcentajeDepreciacion;
	float depreciacionAnual = depreciacionTotal / Depreciacion;
	cout << "Valor original: " << valorOriginal << endl;
	cout << "Porcentaje depreciacion: " << porcentajeDepreciacion * 100 << "%" << endl;
	cout << "Años depreciacion: " << Depreciacion << endl;
	cout << "Año: Depreciacion " << depreciacionAnual << endl;
	valorOriginal -= depreciacionAnual;
	cout << "Valor actual: " << valorOriginal << std::endl << endl;

	float sueldoMensual = 25000;
	float impuestoFijo = 900;
	float porcentajeImpuesto = 0.015;

	float baseImpuesto = sueldoMensual - impuestoFijo;
	float impuestoVariable = baseImpuesto * porcentajeImpuesto;
	float impuestoTotal = impuestoFijo + impuestoVariable;
	float sueldoNeto = sueldoMensual - impuestoTotal;

	cout << "Sueldo mensual: " << sueldoMensual << endl;
	cout << "Impuesto fijo: " << impuestoFijo << endl;
	cout << "Base impuesto variable: " << baseImpuesto << endl;
	cout << "Impuesto variable: " << impuestoVariable << endl;
	cout << "Impuesto total: " << impuestoTotal << endl;
	cout << "Sueldo neto: " << sueldoNeto << endl;

	// Ejercicio 1
	int producto = 3 * 4;
	cout << "Resultado 1: " << producto << endl;

	// Ejercicio 2
	int division = 12 / 3;
	cout << "Resultado 2: " << division << endl;

	// Ejercicio 3
	int modulo1 = 12 % 3;
	cout << "Resultado 3: " << modulo1 << endl;

	// Ejercicio 4
	int modulo2 = 12 % 7;
	cout << "Resultado 4: " << modulo2 << endl;

	// Ejercicio 5
	double suma = 3 + 3.0;
	cout << "Resultado 5: " << suma << endl;

	// Ejercicio 6
	double division2 = 10.0 / 100.0;
	cout << "Resultado 6: " << division2 << endl;

	// Ejercicio 7
	double potencia = pow(3, 2);
	cout << "Resultado 7: " << potencia << endl;


	int a = 10;
	int b = 20;

	cout << "Valor de a: " << a << endl;
	cout << "Valor de b: " << b << endl;

	// i. (a > b)
	cout << "(a > b): " << (a > b) << endl;

	// ii. (a < b)
	cout << "(a < b): " << (a < b) << endl;

	// iii. (a == b)
	cout << "(a == b): " << (a == b) << endl;

	// iv. (a != b)
	cout << "(a != b): " << (a != b) << endl;

	// v. (a + b) > 100
	cout << "(a + b) > 100: " << ((a + b) > 100) << endl;

	// vi. (a - b) == 0
	cout << "(a - b) == 0: " << ((a - b) == 0) << endl;

	// vii. (a * b) > 500
	cout << "(a * b) > 500: " << ((a * b) > 500) << endl;

	// viii. (a * b) < 100
	cout << "(a * b) < 100: " << ((a * b) < 100) << endl;

	// ix. (a - b) < 0
	cout << "(a - b) < 0: " << ((a - b) < 0) << endl;

	// x. a < 20
	cout << "a < 20: " << (a < 20) << endl;







}
